import socket
s = socket.socket()
hosts = ['127.0.0.1','192.168.1.5','10.0.0.1']
prots = [22,445,80,443,3389]
for host in hosts:
  for port in ports:
    try:                                                      //防错误
      print "[+] Connecting to "+host+":"str(port)
      s.connect((host,port))
      s.send('Primal Security \n')                           //发送一个数据包
      banner = s.recv(1024)                                  //recv是用来接收数据包，1024是大小
      if banner:                                            //如果有内容
        print "[+] Port "+str(port)+" open: "+banner        //看服务器上开了啥
      s.close()
    except:pass
    
    
[+] Connecting to 127.0.0.1:22
